@page
@model ColorsWeb.Pages.ConfigModel
@{
    ViewData["Title"] = "Colors Config";
}

<div class="container-fluid">

    <h4>Config</h4>
    @using (Html.BeginForm())
    {
        <span>API URL:</span>
        <input size="50" asp-for="APIUrl" /><br /><br />
        <span>API Mode:</span>
        <input type="checkbox" asp-for="APIMode"  />  <span>&nbsp;Check to call API direct, otherwise call will be made via frontend</span>  <br /><br />
        <span>Number of Lights:</span>
        <input size="4" asp-for="NumberLights"  />   <span>&nbsp;1 to 1000</span> <br /><br />
        <input type="submit" id="Submit" value="Submit">
    }

    <br />

</div>

